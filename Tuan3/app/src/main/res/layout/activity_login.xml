<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background_foreground"
    tools:context=".Activity.LoginActivity">

    <TextView
        android:id="@+id/welcome_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="30dp"
        android:layout_marginTop="96dp"
        android:layout_centerHorizontal="true"
        android:textColor="#db4e4c">

    </TextView>

    <TextView
        android:id="@+id/furniture"
        android:layout_below="@id/welcome_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="FURNITURE"
        android:textSize="30dp"
        android:textColor="#db4e4c"

        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:layout_below="@id/furniture"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:hint="Username"
        android:drawableLeft="@drawable/baseline_perm_contact_calendar_24"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:drawableTint="#e23c3c"
        android:textColorHint="#e23c3c">

    </EditText>

    <EditText
        android:id="@+id/password"
        android:inputType="numberPassword"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:layout_below="@id/username"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:drawableLeft="@drawable/baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:drawableTint="#e23c3c"
        android:textColorHint="#e23c3c">

    </EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#e23c3c"
        android:padding="12dp"
        android:text="Login"
        >

    </Button>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"

        >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3a559f"
            android:drawableLeft="@drawable/icons8_facebook"
            android:text="Facebook"
            android:paddingLeft="-4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

        </Button>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#cf4333"
            android:drawableLeft="@drawable/icons8_google"
            android:paddingLeft="-4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Google">

        </Button>






    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#e23c3c"
        android:text="Register"
        android:padding="12dp">

    </Button>











</RelativeLayout>