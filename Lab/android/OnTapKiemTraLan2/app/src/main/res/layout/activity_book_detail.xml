<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/image_book_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        />



    <TextView
        android:id="@+id/text_book_detail"
        android:layout_width="150dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Name book daaaaaaaaaaaaaa aaaaafadsfdasfasfdas"
        android:textColor="#EDB305"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/image_book_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/price_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Name book"
        android:textColor="#EDB305"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/description_book_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/image_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/text_book_detail"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/description_book_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mo ta"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_book_detail"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>