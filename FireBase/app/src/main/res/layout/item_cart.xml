<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_detail_cart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/image_round"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/card1" />

    <TextView
        android:id="@+id/name_detail_cart"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_detail_cart"
        android:text="Sản phẩm test"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/quantity_detail_cart"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_detail_cart"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/image_detail_cart"
        android:inputType="number" />

    <TextView
        android:id="@+id/price_deatail_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="5.000 vnd"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subtotal_detail_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_detail_cart"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="5.000 vnd"
        android:textColor="#FF0000"
        android:textSize="20sp" />

</RelativeLayout>