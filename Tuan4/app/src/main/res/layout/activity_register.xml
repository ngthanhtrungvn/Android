<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e23c3c"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/line_left"
    app:layout_constraintRight_toRightOf="@id/line_right"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="CREATE ACCOUNT"
    android:textSize="30dp"
    android:textColor="@color/white"
    android:textStyle="bold"
    app:layout_constraintVertical_bias="0.1">

</TextView>

    <EditText
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:background="@color/white"
        android:hint="Email"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="#e23c3c"
        android:drawableLeft="@drawable/baseline_email_24">

    </EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:background="@color/white"
        android:hint="Username"
        android:layout_marginTop="5dp"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawableTint="#e23c3c"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/baseline_perm_contact_calendar_24"
        >

    </EditText>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawableTint="#e23c3c"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/baseline_key_24"
        >

    </EditText>

    <EditText
        android:id="@+id/edt_cf_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@+id/edt_password"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:hint="Confirm password"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawableTint="#e23c3c"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/baseline_perm_contact_calendar_24"
        >

    </EditText>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@id/edt_cf_password"
        android:backgroundTint="#a31515"
        android:text="SIGN IN"
        >

    </Button>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@id/edt_cf_password"
        android:backgroundTint="#a31515"
        android:text="SIGN IN"
        >

    </Button>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@id/btn_sign"
        android:backgroundTint="#a31515"
        android:text="CANCEL"
        >

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>