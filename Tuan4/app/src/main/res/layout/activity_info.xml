<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e23c3c"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <EditText
        android:id="@+id/edt_info"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableLeft="@drawable/baseline_info_24"
        android:paddingLeft="10dp"
        android:hint="Vudinhai"
        android:drawablePadding="10dp"
        android:drawableTint="#e23c3c"
        app:layout_constraintVertical_bias="0.2">

    </EditText>

    <EditText
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@id/edt_info"
        app:layout_constraintVertical_bias=".3"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="#e23c3c"
        android:drawableLeft="@drawable/baseline_email_24">

    </EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:hint="Username"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawableTint="#e23c3c"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/baseline_perm_contact_calendar_24"
        >

    </EditText>


    <EditText
        android:id="@+id/edt_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:background="@color/white"
        android:hint="Password"
        android:layout_marginTop="5dp"
        android:textColorHint="#e23c3c"
        android:paddingLeft="10dp"
        android:drawableTint="#e23c3c"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/baseline_key_24"
        >

    </EditText>

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_password"
        app:layout_constraintLeft_toLeftOf="@id/line_left"
        app:layout_constraintRight_toRightOf="@id/line_right"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <RadioButton
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Male"
            android:textColor="#e23c3c"
            app:layout_constraintLeft_toLeftOf="@id/line_left"></RadioButton>

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="@id/line_right"
            android:text="Female"
            android:textColor="#e23c3c"
            >

        </RadioButton>
    </RadioGroup>







</androidx.constraintlayout.widget.ConstraintLayout>
